.site-brand-container {
  position: relative;
}

.site-meta {
  background: rgba(255,255,255,0.3);
  color: black;
  padding: 20px 0;
  border: black;

  +tablet-mobile() {
    box-shadow: 0 0 16px rgba(0, 0, 0, .1);
  }
}

.brand {
  color: black;
  background: none;
  padding: 0;

  &:hover {
    color: $black-light;
  }
}

.site-subtitle {
  color:black;
  font-weight: initial;
  margin: 10px 10px 0;
}

.custom-logo-image {
  margin-top: 20px;

  +tablet-mobile() {
    display: none;
  }
}
